<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Ultragamma.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/7f625253aa.js" crossorigin="anonymous" asp-append-version="true"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>
<body>

    <header class="site-header sticky-top py-1 bg-black">
        <nav class="container d-flex flex-column flex-md-row justify-content-between">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <i class="fa-thin fa-cloud-music"></i>
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Home" asp-action="Index"><img src="../Images/Insane-Mechanical.jpg" alt="mdo" width="30" height="30" class="rounded-circle"></a></li>
                        <li>
                            <div class="dropdown text-end">
                                <a class="nav-link px-2 text-white d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categorias
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton">
                                    @foreach (var i in ViewBag.Categorias)
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("Categorias", "Articulo", new { CategoriaId = i.ID })">@i.Titulo</a></li>
                                    }
                                </ul>
                            </div>
                        </li>
                    </ul>

                    <div class="text-end">
                        <form asp-controller="Home" asp-action="Login" method="get">
                            <input type="submit" class="btn btn-outline-light me-2" name="IniciarSesion" value="Iniciar Sesion" />
                        </form>
                    </div>
                    <div class="text-end">
                        <form asp-controller="Home" asp-action="Register" method="get">
                            <input type="submit" class="btn btn-primary" name="Registrate" value="Registrate" />
                        </form>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        .bx bxl-facebook-circle {
            color: white;
        }

        .bx bxl-instagram-alt {
            color: white;
        }

        .bx bxl-gmail bx-lg {
            color: white;
        }

    </style>



    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
