@using Insane_Mechanical.Models;
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Caja de Comentarios con Bootstrap</title>
    <style>
        .usuario {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .texto {
            margin-top: 5px; /* Ajusta el margen superior según sea necesario */
            margin-left: 10px;
        }

    </style>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script type="text/javascript">
        $(document).ready(function () {
            var cadena = $('#cadenaInput').val();
            $.ajax({
                type: 'GET',
                url: '/api/Actualizar/Comentario?parametro=' + cadena,
                success: function (response) {
                    lista = response;
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var lista = "";
    </script>
</head>
<body>
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2>Deja tu comentario</h2>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <textarea id="cadenaInput" class="form-control" rows="5" placeholder="Escribe tu comentario aquí..."></textarea>
                            <input id="IdArticulo" name="IdArticulo" type="hidden" value="@ViewBag.IdArticulo">
                        </div>
                        <button id="updateButton" class="btn btn-primary btn-block">Enviar</button>
                    </div>
                </div>

                <div class="mt-4">
                    <h3>Comentarios</h3>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="d-flex align-items-start">
                                <div id="container"></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var lista = "";
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#updateButton').click(function () {
                var mensaje = $('#cadenaInput').val();
                var IdArticulo = $('#IdArticulo').val();
                $.ajax({
                    type: 'GET',
                    url: '/api/Actualizar/Comentario?parametro=' + mensaje + '&i=' + IdArticulo,
                    success: function (response) {
                        var usuarios = response;

                        document.getElementById("cadenaInput").value = "";

                        // Obtener el contenedor donde se agregarán los elementos duplicados
                        var container = document.getElementById("container");

                        // Bucle for para duplicar el contenido para cada usuario
                        for (var i = 0; i < usuarios.length; i++) {
                            var usuario = usuarios[i];

                            // Crear elementos HTML dinámicamente
                            var img = document.createElement("img");
                            img.src = usuario.Foto;
                            img.classList.add("rounded-circle", "mr-3");
                            img.alt = usuario.Foto;

                            var strong = document.createElement("strong");
                            strong.textContent = usuario.Nombre;

                            var span = document.createElement("span");
                            span.classList.add("text-muted");
                            //span.textContent = usuario.Fecha;

                            var divTexto = document.createElement("div");
                            divTexto.classList.add("texto");
                            divTexto.textContent = usuario.Texto;

                            var divUsuario = document.createElement("div");
                            divUsuario.classList.add("usuario");
                            divUsuario.appendChild(img);
                            divUsuario.appendChild(strong);
                            divUsuario.appendChild(span);
                            divUsuario.appendChild(divTexto);

                            // Agregar elementos al contenedor
                            container.appendChild(divUsuario);
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>