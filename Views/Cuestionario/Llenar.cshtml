@model IEnumerable<Insane_Mechanical.Models.Pregunta>

@{
    if (ViewBag.Nivel == "Cliente")
    {
        Layout = "_LayoutCliente";
    }
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
}

<style>
    .autenticado {
        text-align: center;
        padding: 20px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>

<h1 class="text-center">Cuestionario de Vialidad</h1>

@{
    if (ViewBag.Conteo == 0)
    {
        <div class="d-flex justify-content-center">
            <div class="card" style="width: 50%;">
                <div class="card-body">
                    <div class="alert autenticado text-center">
                        <div class="autenticado">
                            <p>No hay preguntas por el momento.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @if (ViewBag.YaContesto != null && (bool)ViewBag.YaContesto)
        {
            <div class="d-flex justify-content-center">
                <div class="card" style="width: 50%;">
                    <div class="card-body">
                        <div class="alert alert-info text-center">
                            <p>Ya has completado este cuestionario.</p>
                            <form asp-action="Llenar" asp-controller="Cuestionario" method="get">
                                <button type="submit" name="repetir" value="true" class="btn btn-primary">Repetir Cuestionario</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {

            <div class="d-flex justify-content-center">
                <div class="card" style="width: 50%;">
                    <div class="card-body">
                        <form id="cuestionarioForm" asp-action="Llenar" method="post">
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var pregunta = Model.ElementAt(i);
                                <div class="form-group">
                                    <label>@pregunta.Nombre</label>
                                    @if (pregunta.Tipo == "Seleccion")
                                    {
                                        <select class="form-control" name="respuestas[@i].idOpcion" required>
                                            <option value="">Seleccione una opción</option>
                                            @foreach (var opcion in pregunta.Opciones)
                                            {
                                                <option value="@opcion.ID">@opcion.Texto</option>
                                            }
                                        </select>
                                        <input type="hidden" name="respuestas[@i].idPregunta" value="@pregunta.ID" />
                                    }
                                    else if (pregunta.Tipo == "Radio")
                                    {
                                        @foreach (var opcion in pregunta.Opciones)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="respuestas[@i].idOpcion" value="@opcion.ID" required>
                                                <input type="hidden" ame="respuestas[@i].Respuesta" value="@opcion.Texto" />
                                                <label class="form-check-label">@opcion.Texto</label>
                                            </div>
                                        }
                                        <input type="hidden" name="respuestas[@i].idPregunta" value="@pregunta.ID" />
                                    }
                                </div>
                            }
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
}

@section Scripts {
    <script>
        document.getElementById("cuestionarioForm").addEventListener("submit", function (event) {
            let valid = true;
            let form = this;

            form.querySelectorAll("select[required]").forEach(function (select) {
                if (select.value === "") {
                    valid = false;
                    select.classList.add("is-invalid");
                } else {
                    select.classList.remove("is-invalid");
                }
            });

            form.querySelectorAll(".form-check-input[required]").forEach(function (radio) {
                let name = radio.getAttribute("name");
                if (!form.querySelector(`.form-check-input[name="${name}"]:checked`)) {
                    valid = false;
                    radio.closest(".form-check").classList.add("is-invalid");
                } else {
                    radio.closest(".form-check").classList.remove("is-invalid");
                }
            });

            if (!valid) {
                event.preventDefault();
                alert("Por favor, conteste todas las preguntas.");
            }
        });
    </script>
}