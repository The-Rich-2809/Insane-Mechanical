@model Insane_Mechanical.Models.Pregunta

@{
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin2";
    }
}

<h1 class="text-center">Crear Pregunta</h1>

<div class="d-flex justify-content-center">
    <div class="card" style="width: 50%;">
        <div class="card-body">
            <form asp-action="CrearPregunta" method="post">
                <div class="form-group">
                    <label for="Pregunta">Pregunta</label>
                    <input type="text" class="form-control" asp-for="Nombre" placeholder="Escribe la pregunta">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Tipo">Tipo de Pregunta</label>
                    <select class="form-control" asp-for="Tipo">
                        <option value="">Seleccione el tipo</option>
                        <option value="Seleccion">Seleccion</option>
                        <option value="Radio">Radio</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Agregar Pregunta</button>
            </form>
        </div>
    </div>
</div>