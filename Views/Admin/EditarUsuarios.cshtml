@model Insane_Mechanical.Models.Usuario

@{

    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin2";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Editar Usuario</h1>
            <form class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                <input name="ID" value="@Html.DisplayFor(model => model.ID)" type="hidden" />
                <input name="Contrasena" type="hidden" value="@Html.DisplayFor(model => model.Contrasena)" />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Correo" class="form-label">Correo</label>
                        <br />
                        <input asp-for="Correo" name="Correo" type="text" class="form-control" id="Correo" required>
                        <div class="invalid-feedback">
                            Ingrese un correo valido
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <label asp-for="Nombre" class="form-label">Nombre del Usuario</label>
                        <input asp-for="Nombre" name="Nombre" type="text" class="form-control" id="Producto" required>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <label asp-for="Genero" class="form-label">Genero del Usuario</label>
                        <select asp-for="Genero" class="form-control" id="gender" name="Genero">
                            <option value="Hombre">Hombre</option>
                            <option value="Mujer">Mujer</option>
                            <option value="Prefiero no decirlo">Prefiero no decirlo</option>
                        </select>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TipoUsuario" class="form-label">Nivel del Usuario</label>
                        <select asp-for="TipoUsuario" name="TipoUsuario" class="form-select" id="Nivel" required>
                            <option value="">Nivel...</option>
                            <option>Cliente</option>
                            <option>Admin</option>
                        </select>
                        <div class="invalid-feedback">
                            Seleccione un nivel válido.
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <label asp-for="Telefono" class="form-label">Telefono</label>
                        <input asp-for="Telefono" name="Telefono" type="text" class="form-control" id="Producto" required>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label">Selecciona tu imagen</label>
                            <input name="Imagen" class="form-control" type="file" id="formFileMultiple" multiple>
                        </div>
                        <div class="invalid-feedback">
                            Zip code required.
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <button asp-controller="Admin" asp-action="EditarUsuarios" method="post" class="w-100 btn btn-primary btn-lg" type="submit">Modificar el Usuario</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
</body>
</html>