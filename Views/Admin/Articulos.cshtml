@model IEnumerable<Insane_Mechanical.Models.Articulo>

@{
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin2";
    }
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>

<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Articulos</h1>
            <br>
            <p>
                <form asp-controller="Admin" asp-action="AgregarArticulos" method="get">
                    <input type="submit" class="btn btn-success" value="Nuevo Articulo" />
                </form>
            </p>
            <br>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descripcion</th>

                    </tr>
                </thead>
                @foreach (var i in Model)
                {
                    <tbody>
                        <tr>
                            <td>@i.ID</td>
                            <td>@i.Titulo</td>
                            <td>@i.Descripcion</td>
                            <td>
                                <form method="get">
                                    <input name="id" type="hidden" value=@i.ID>
                                    <button class="btn btn-primary text-white" asp-controller="Usuario" asp-action="EditarDireccion">Editar</button>
                                    <button class="btn btn-danger text-white" asp-controller="Usuario" asp-action="EliminarDireccion">Borrar</button>
                                </form>

                            </td>
                        </tr>
                    </tbody>
                }
            </table>
            <form asp-controller="Admin" asp-action="NuevaCategoria" method="get">
                <input type="submit" class="btn btn-success" value="Nueva Categoria" />
            </form>
        </div>
        <br />
    </main>
</body>