@{
    Layout = "_LayoutLoginRegister";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Contraseña</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #2e2e2e, #1c1c1c);
            color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: rgba(0, 0, 0, 0.8);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
            margin: auto;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-container:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            }

            .login-container h2 {
                text-align: center;
                color: #fff;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
                color: #aaa;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: none;
                border-radius: 8px;
                background-color: #444;
                color: #fff;
                transition: background-color 0.3s ease;
            }

                .form-group input:focus {
                    background-color: #555;
                    outline: none;
                }

            .form-group button {
                width: 100%;
                padding: 12px;
                border: none;
                background-color: #555;
                color: #fff;
                border-radius: 8px;
                cursor: pointer;
                transition: background-color 0.3s ease, transform 0.3s ease;
            }

                .form-group button:hover {
                    background-color: #666;
                    transform: translateY(-2px);
                }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.8em;
            color: #777;
            background-color: #222;
            padding: 10px;
            border-radius: 8px;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
        }

            .button-container button {
                width: 48%;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Cambiar Contraseña</h2>
        <form asp-action="CambiarContrasena" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="password">Nueva Contraseña</label>
                <input type="password" id="password" name="Contrasena" required>
            </div>
            <div class="form-group">
                <label for="password2">Repite la Contraseña</label>
                <input type="password" id="password2" name="Contrasena2" required>
            </div>
            <div class="form-group">
                <button type="submit">Cambiar la contraseña</button>
            </div>
            <input type="hidden" name="Correo" value="@ViewBag.Correo" />
        </form>
        <h1 class="text-black">@ViewBag.Mensaje</h1>
    </div>
</body>
</html>
