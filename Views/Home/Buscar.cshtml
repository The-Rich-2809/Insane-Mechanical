@model List<Insane_Mechanical.Models.Articulo>

@{
    if (ViewBag.Nivel == "Cliente")
    {
        Layout = "_LayoutCliente";
    }
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados de búsqueda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <h2>Resultados de búsqueda</h2>

        <form method="get" asp-action="Buscar">
            <div class="input-group mb-3">
                <input type="text" name="query" class="form-control" placeholder="Buscar..." value="@Context.Request.Query[" query"]" />
                <button class="btn btn-primary" type="submit">Buscar</button>
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                @ViewBag.Message
            </div>
        }
        else
        {
            <ul class="list-group">
                @foreach (var articulo in Model)
                {
                    <li class="list-group-item">
                        <h5>@articulo.Titulo</h5>
                        <p>@articulo.Descripcion</p>
                        <a href="@Url.Action("Articulo", "Articulo", new { RutaHtml = articulo.RutaHTML, IdArticulo = articulo.ID })" class="btn btn-secondary">Leer más</a>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
