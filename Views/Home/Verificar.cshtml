@{
    Layout = "_LayoutV";
}

@model VerifyViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify Your Account</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="mt-5">Verifica tu cuenta</h2>
                <h4 class="mt-5">Ingrese el codigo que se le envio</h4>
                <form asp-action="Verificar" method="post">
                    <input type="hidden" asp-for="idUsuario" />
                    <div class="form-group">
                        <label asp-for="CodigoIngresado">Codigo Ingresado</label>
                        <input asp-for="CodigoIngresado" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Verificar</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
